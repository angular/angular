{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "semi": true,
  "quoteProps": "preserve",
  "bracketSpacing": false,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["./.prettierrc"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.html"],
      "excludeFiles": ["**/test/**"],
      "options": {
        "parser": "angular"
      }
    }
  ]
}
