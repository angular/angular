ts_project(
    name = "test_lib",
    testonly = True,
    srcs = glob(["*_spec.ts"]),
    deps = [
        "//packages/compiler",
        "//packages/core/testing",
        "//packages/private/testing",
    ],
)

jasmine_test(
    name = "test",
    data = [
        ":bundles",
        ":test_lib",
    ],
)
