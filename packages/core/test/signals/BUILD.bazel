    name = "signals_lib",
    testonly = True,
    srcs = glob(
        ["**/*.ts"],
    ),
    deps = [
        "//packages/core",
        "//packages/core/primitives/signals",
        "//packages/core/src/util",
        "//packages/core/testing",
