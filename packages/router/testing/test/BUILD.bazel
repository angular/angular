    visibility = ["//:__pkg__"],
    deps = [
        "//packages/common",
        "//packages/common/testing",
        "//packages/core",
        "//packages/core/testing",
        "//packages/platform-browser",
        "//packages/platform-browser-dynamic",
        "//packages/platform-browser/testing",
        "//packages/private/testing",
        "//packages/router",
        "//packages/router/testing",
        "@npm//rxjs",
    ],
