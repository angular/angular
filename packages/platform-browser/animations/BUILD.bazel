load("//tools:defaults2.bzl", "generate_api_docs", "ng_project", "tsec_test")

package(default_visibility = ["//visibility:public"])

exports_files(["package.json"])

ng_project(
    name = "animations",
    srcs = glob(
        [
            "*.ts",
            "src/**/*.ts",
        ],
    ),
    deps = [
        "//packages/animations:animations_rjs",
        "//packages/animations/browser:browser_rjs",
        "//packages/common:common_rjs",
        "//packages/core:core_rjs",
        "//packages/platform-browser:platform-browser_rjs",
    ],
)

tsec_test(
    name = "tsec_test",
    target = ":animations_rjs",
    tsconfig = "//packages:tsconfig_build",
)

filegroup(
    name = "files_for_docgen",
    srcs = glob([
        "*.ts",
        "src/**/*.ts",
    ]) + ["PACKAGE.md"],
)

generate_api_docs(
    name = "platform-browser_animations_docs",
    srcs = [
        ":files_for_docgen",
        "//packages:common_files_and_deps_for_docs",
    ],
    entry_point = ":index.ts",
    module_name = "@angular/platform-browser/animations",
)
