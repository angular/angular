  "author": "angular",
  "license": "MIT",
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=24.0.0"
  },
  "bin": {
    "ngc-wrapped": "./src/ngc-wrapped/index.mjs",
    "packager": "./src/ng_package/packager.mjs",
    "xi18n": "./src/ngc-wrapped/extract_i18n.mjs"
  },
  "typings": "./src/ngc-wrapped/index.d.ts",
