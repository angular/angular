    name = "test_utils",
    testonly = True,
    srcs = [
        "mocks.ts",
        "test_support.ts",
    ],
    visibility = [
        ":__subpackages__",
        "//packages/language-service/test:__subpackages__",
    ],
    deps = [
        "//packages:types",
        "//packages/compiler",
        "//packages/compiler-cli",
        "//packages/compiler-cli/src/ngtsc/file_system",
        "//packages/compiler-cli/src/ngtsc/testing",
        "@npm//typescript",
    ],
)

