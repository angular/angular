{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "VSCE: watch bundles",
      "command": "pnpm --filter=ng-template run watch",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^iBazel \\[\\d{1,2}:\\d{1,2}(?:AM|PM)\\]: Querying for files to watch.*",
          "endsPattern": "^INFO: Build completed successfully, \\d+ total action(s)?"
        }
      }
    },
    {
      "type": "shell",
      "label": "VSCE: package",
      "command": "pnpm --filter=ng-template run package"
    }
  ]
}
