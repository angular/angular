load("@devinfra//bazel/jasmine:jasmine.bzl", "jasmine_test")
load("//tools:defaults.bzl", "ts_project")

ts_project(
    name = "tests",
    testonly = True,
    srcs = glob(["*.ts"]),
    deps = [
        "//vscode-ng-language-service:node_modules/@types/jasmine",
        "//vscode-ng-language-service/common",
