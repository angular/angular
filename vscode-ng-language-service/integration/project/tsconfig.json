{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "target": "es2015",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "post": [
        "dist/post"
      ]
