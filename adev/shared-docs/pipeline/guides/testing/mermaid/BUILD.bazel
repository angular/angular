load("//tools:defaults.bzl", "esbuild_jasmine_node_test", "ts_library")

ts_library(
    name = "unit_test_lib",
    testonly = True,
    srcs = glob([
        "*.spec.ts",
    ]),
    deps = [
        "//adev/shared-docs/pipeline/guides",
        "@npm//@bazel/runfiles",
        "@npm//@types/jsdom",
        "@npm//jsdom",
        "@npm//marked",
    ],
)

ts_library(
    name = "bootstrap",
    testonly = True,
    srcs = [
        "bootstrap.init.ts",
    ],
)

esbuild_jasmine_node_test(
    name = "unit_tests",
    bootstrap = [
        ":bootstrap",
    ],
    data = [
        "@npm//@angular/build-tooling/bazel/browsers/chromium:chromium-for-generation",
        "@npm//jsdom",
        "@npm//mermaid",
        "@npm//playwright-core",
    ] + glob([
        "**/*.md",
        "**/*.svg",
        "**/*.ts",
    ]),
    env = {
        "CHROME_BIN": "$(CHROMIUM)",
    },
    external = [
        "playwright-core",
        "jsdom",
    ],
    tags = [
        "no-remote-exec",
    ],
    toolchains = [
        "@npm//@angular/build-tooling/bazel/browsers/chromium:toolchain_alias",
    ],
    deps = [":unit_test_lib"],
)
