load("@aspect_rules_esbuild//esbuild:defs.bzl", "esbuild")
load("//adev/shared-docs:defaults.bzl", "ts_project")

package(default_visibility = ["//visibility:public"])

ts_project(
    name = "lib",
    srcs = glob(
        [
            "*.mts",
        ],
        exclude = [
            "index.mts",
        ],
    ),
    deps = [
        "//adev:node_modules/@types/node",
        "//adev:node_modules/@webcontainer/api",
        "//adev:node_modules/tinyglobby",
        "//adev/shared-docs/interfaces:interfaces_rjs",
    ],
)

ts_project(
    name = "navigation",
    srcs = [
        "index.mts",
    ],
    visibility = [
        "//adev/shared-docs:__subpackages__",
    ],
    deps = [
        ":lib_rjs",
        "//adev:node_modules/@types/node",
        "//adev/shared-docs/interfaces",
    ],
)

esbuild(
    name = "bundle",
    srcs = [
        "//adev/shared-docs:tsconfig_build",
    ],
    config = "//adev/shared-docs/pipeline:esbuild-config",
    entry_point = ":index.mts",
    format = "esm",
    output = "navigation.mjs",
    platform = "node",
    target = "es2022",
    visibility = ["//visibility:public"],
    deps = [
        ":navigation_rjs",
    ],
)
