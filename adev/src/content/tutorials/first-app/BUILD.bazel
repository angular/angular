load("//adev/shared-docs:index.bzl", "generate_guides", "generate_tutorial")

package(default_visibility = ["//adev:__subpackages__"])

generate_guides(
    name = "first-app-guides",
    srcs = glob(
        [
            "**/*.md",
        ],
        exclude = [
            "**/node_modules/**/*.md",
        ],
    ),
    api_manifest = "//adev/src/assets:docs_api_manifest",
    data = [
        ":files",
    ],
)

filegroup(
    name = "files",
    srcs = glob(
        ["**/*"],
        exclude = ["**/*.md"],
    ),
)

generate_tutorial(
    name = "first-app",
    tutorial_srcs = ":files",
)
