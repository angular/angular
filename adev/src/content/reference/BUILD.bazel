load("//adev/shared-docs:defaults.bzl", "js_library")
load("//adev/shared-docs:index.bzl", "generate_guides")

generate_guides(
    name = "reference",
    srcs = glob([
        "*.md",
    ]),
    data = [
        "//adev/src/assets/images:roadmap.svg",
    ],
    visibility = ["//adev:__subpackages__"],
)

