)

ts_test_library(
    name = "protocol_test",
    srcs = glob(
        ["**/*.spec.ts"],
    ),
    deps = [
        ":protocol",
        "//:node_modules/@angular/core",
    ],
)

zoneless_web_test_suite(
    name = "test",
    deps = [
        ":protocol_test",
    ],
)
